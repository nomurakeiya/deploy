
<% if @user.errors.any? %>
	<div class="error_field">
		<h2><%= @user.errors.count %>error prohibited this obj from being saved:</h2>
		<ul>
			<% @user.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<body>
	<div class="container">
		<div class="row">
			<div class="col-xs-6 col-xs-offset-3">
				<div class="user-info">
					<h2>User info</h2>
					<%= form_for(@user) do |f| %>
						<div class="field">
							<%= f.label :name, "Name" %>
							<%= f.text_field :name %>
						</div>
						<div class="field">
							<%= f.label :image, "Image" %>
							<%= f.attachment_field :profile_image %>
						</div>
						<div class="field">
							<%= f.label :introduction, "Introduction" %>
							<%= f.text_area :introduction %>
						</div>
						<div class="submit">
							<%= f.submit 'Update User' %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</body>


