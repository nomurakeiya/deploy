
<body>
	<div class="container">
		<div class="top-message col-md-offset-3 col-md-6">
			<div class="row">
				<%if flash[:notice] %>
					<div class="flash">
						<%= flash[:notice] %>
					</div>
				<% end %>
			</div>
			<div class="message row">
				<h1>Welcome to
					<span class="glyphicon glyphicon-book" aria-hidden="true"></span>Bookers!!
				</h1>
				<p>in <span class="glyphicon glyphicon-book" aria-hidden="true"></span><strong>Bookers</strong>,</p>
				<p>you can share and exchange your opinions , inpressions , and emotions</p>
				<p>about various books!</p>
			</div>
			<div class="row">
				<div>
					<%= link_to "Log in", new_user_session_path, class: 'btn btn-info log-in col-xs-10 col-xs-offset-1' %>
				</div>
			</div>
			<div class="row">
				<div>
					<%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-success sign-up  col-xs-10 col-xs-offset-1'%>
				</div>
			</div>
			</div>
		</div>
	</div>
</body>